let g:sessions_dir = '~/.vim/sessions'
" exec 'nnoremap <Leader>ms :mksession! ' . g:sessions_dir . '/*.vim<C-D><BS><BS><BS><BS><BS>'
" exec 'nnoremap <Leader>mr :source ' . g:sessions_dir. '/*.vim<C-D><BS><BS><BS><BS><BS>'
exec 'nnoremap <Leader>ms :mksession! ' . g:sessions_dir . '/<C-D>'
exec 'nnoremap <Leader>mr :source ' . g:sessions_dir. '/<C-D>'

